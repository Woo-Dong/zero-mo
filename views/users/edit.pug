extends ../layout

block content
  .container
    h1.main-title Profile Update
    form(action=`/users/${user._id}?_method=PUT`, method='POST')
      .form-group
        label(for='name') 이름
        input.form-control(type='text', id='name', name='name', placeholder='Your name', value=user.name)
        .form-group
        label(for='idname') 아이디
        input.form-control(type='text', id='idname', name='idname', placeholder='ID', value=user.idname)
      if (sessionUser.isAdmin == false)
        .form-group
          label(for='current_password') 현재 비밀번호
          input.form-control(type='password', id='current_password', name='current_password', placeholder='Current Password')
        .form-group
          label(for='password') 수정할 비밀번호
          input.form-control(type='password', id='password', name='password', placeholder='Password')
        .form-group
          label(for='password_confirmation') 비밀번호 확인
          input.form-control(type='password', id='password_confirmation', name='password_confirmation', placeholder='Password Confirmation')
      .form-group
        label(for='tel') 연락처
        input.form-control(type='text', id='tel', name='tel', placeholder='연락처', value=user.tel)
      if (sessionUser.isAdmin)  
        .form-group
          label(for='isAdmin') 회원등급
            input.form-control(type="radio" id='isAdmin' name='isAdmin', value='true') 
            | 관리자
            input.form-control(type="radio" id='isAdmin' name='isAdmin', value='false', checked)
            | 일반

      
      a.btn.btn-outline-secondary(href='javascript:window.history.back();') 뒤로
      | 
      button.btn.btn-warning(type='submit') 수정
