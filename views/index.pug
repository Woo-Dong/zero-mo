extends layout

include ./includes/_paginate

block content  
  main.container(role='main')
    // /.메인내용
    .jumbotron.p-3.p-md-5.text-white.rounded.bg-warning
      .row
        .col-md-6
          h1.display-4.font-italic Zero-Mo
          p.lead.my-3 공모전의 대가! 공모전의 바이브!
          p.lead.mb-0
            a.text-white.font-weight-bold(href='#') 자세히 보기...
        .col-md-6
          img(src='images/favicon.png', style='width: 350px; height: 350px;')
    .row
      aside.col-md-3.sidebar
        // /.sidebar
        .p-3.mb-3.bg-light.rounded
          h4
            b 분야별
          ol.list-unstyled
            li
              a(href='./contests') 전체
            li
              a(href='#') 기획/아이디어
            li
              a(href='#') 광고/마케팅
            li
              a(href='#') 웹/모바일
            li
              a(href='#') 봉사활동
            li
              a(href='#') 취업/창업
            li
              a(href='#') 기타
          h4
            b 공모대상자
          ol.list-unstyled.mb-0
            li
              a(href='./contests') 전체
            li
              a(href='#') 대학생
            li
              a(href='#') 대학원생
            li
              a(href='#') 청소년
            li
              a(href='#') 어린이
          h4
            b 주최사
          ol.list-unstyled.mb-0
            li
              a(href='#') 공기업
            li
              a(href='#') 대기업
            li
              a(href='#') 중소/벤처기업
            li
              a(href='#') 비영리
            li
              a(href='#') 해외
            li
              a(href='#') 기타
          h4
            b 시상내역
          ol.list-unstyled.mb-0
            li
              a(href='#') 5천만원이상
            li
              a(href='#') 3천~5천만원
            li
              a(href='#') 1천~3천만원
            li
              a(href='#') 1천만원이하
            li
              a(href='#') 인턴채용
      // sidebar
      .col-md-9
        .card.flex-md-row.mb-4.shadow-sm.h-md-250
          .card-body.d-flex.flex-column.align-items-start
            strong.d-inline-block.mb-2.text-success 오늘의 추천 공모전
            h3.mb-0
              a.text-dark(href='#') 공모전1
            .mb-1.text-muted 접수기간: 0000/00/00~0000/00/00
            p.card-text.mb-auto 분야/응모대상/주최/상금/홈페이지
          img.card-img-right.flex-auto.d-none.d-lg-block(data-src='holder.js/200x250?theme=thumb', alt='Thumbnail [200x250]', src='./images/images.jpg', data-holder-rendered='true', style='width: 200px; height: 250px;')
        .main
          h3.pb-3.mb-4.font-italic.border-bottom Today's Contest List
          if contests.total > 0
            .table-area
              include ./contests/_table
          .pagination
            +paginate(contests, '/', query)

