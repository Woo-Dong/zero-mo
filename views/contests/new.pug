extends ../layout

block content
  .container
    h1.main-title 공모전 등록하기
    form(action="/contests", method="POST")
      .form-group
        label(for="title") 공모전 제목
        input.form-control(type="text", name="title", placeholder="공모전 제목", value=contest.title )
      .form-group
        label(for="company") 주최기관
        select(name="company")
          option(value="공기업")
            | 공기업
          option(value="대기업")
            | 대기업
          option(value="중소/벤처기업")
            | 중소/벤처기업
          option(value="비영리")
            | 비영리
          option(value="해외")
            | 해외
          option(value="기타" selected="")
            | 기타

      .form-group
        label(for="target") 공모대상자
        select(name="target")
          option(value="전체" selected="")
            | 전체
          option(value="대학생")
            | 대학생
          option(value="대학원생")
            | 대학원생
          option(value="청소년")
            | 청소년
          option(value="어린이")
            | 어린이

      .form-group
        label(for="start") 시작날짜
        input.form-control(type="date", name="start", placeholder="시작날짜", value=contest.start)
      .form-group
        label(for="end") 종료날짜
        input.form-control(type="date", name="end", placeholder="종료날짜", value=contest.end)
      .form-group
        label(for="prize") 시상
        input.form-control(type="text", name="prize", placeholder="시상금액", value=contest.prize)
      .form-group
        label(for="content") 상세내용
        textarea.form-control(rows='8', cols='60', name="content", placeholder="내용", value=contest.content)
      //- p
      //-   | 첨부파일(이미지) 
      //-   input(type='file', name='FileName')
      p
        button.btn.btn-outline-warning(type="submit") 공모전 등록하기
